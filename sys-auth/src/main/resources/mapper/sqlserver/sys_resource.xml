<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.greelee.auth.dao.SysResourceDao">
    <resultMap type="com.greelee.auth.model.SysResourceDO" id="commonMap">
        <result column="id" property="id"/>
        <result column="pid" property="pid"/>
        <result column="p_title" property="pTitle"/>
        <result column="name" property="name"/>
        <result column="title" property="title"/>
        <result column="description" property="description"/>
        <result column="url" property="url"/>
        <result column="type" property="type"/>
        <result column="sys_type" property="sysType"/>
        <result column="seq" property="seq"/>
        <result column="status" property="status"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="permission" property="permission"/>
        <result column="icon" property="icon"/>
    </resultMap>

    <sql id="tableName">
        sys_resource
    </sql>

    <sql id="columns">
        pid,
        p_title,
        name,
        title,
        description,
        url,
        type,
        sys_type,
        seq,
        status,
        create_time,
        update_time,
        permission,
        icon
    </sql>

    <sql id="columnsWithId">
        id,
        <include refid="columns"/>
    </sql>

    <sql id="entities">
        #{pid},
        #{pTitle},
        #{name},
        #{title},
        #{description},
        #{url},
        #{type},
        #{sysType},
        #{seq},
        #{status},
        #{createTime},
        #{updateTime},
        #{permission},
        #{icon}
    </sql>

    <sql id="entitiesWithId">
        #{id},
        <include refid="entities"/>
    </sql>

    <insert id="save" keyColumn="id" keyProperty="id" useGeneratedKeys="true">
        INSERT INTO
            <include refid="tableName"/>
        (
            <include refid="columns"/>
        )
        VALUES
        (
            <include refid="entities"/>
        )
    </insert>

    <update id="update" parameterType="com.greelee.auth.model.SysResourceDO">
        UPDATE
        <include refid="tableName"/>
        <trim prefix="SET" suffixOverrides=",">
            <if test="pid != null">
                pid=#{pid},
            </if>
            <if test="pTitle != null and pTitle != ''">
                p_title=#{pTitle},
            </if>
            <if test="name != null and name != ''">
                name=#{name},
            </if>
            <if test="title != null and title != ''">
                title=#{title},
            </if>
            <if test="description != null and description != ''">
                description=#{description},
            </if>
            <if test="url != null and url != ''">
                url=#{url},
            </if>
            <if test="type != null">
                type=#{type},
            </if>
            <if test="sysType != null">
                sys_type=#{sysType},
            </if>
            <if test="seq != null">
                seq=#{seq},
            </if>
            <if test="status != null">
                status=#{status},
            </if>
            <if test="updateTime != null">
                update_time=#{updateTime},
            </if>
            <if test="permission != null and permission != ''">
                qpermission=#{permission},
            </if>
            <if test="icon != null and icon != ''">
                icon=#{icon}
            </if>
        </trim>
        WHERE
            id = #{id}
    </update>

    <update id="deleteById">
        UPDATE
        <include refid="tableName"/>
        SET
            status = 2
        WHERE
            id = #{id}
    </update>

    <update id="updatePTitleByPid">
        UPDATE
        <include refid="tableName"/>
        SET
            p_title=#{pTitle}
        WHERE
            pid = #{pid}
    </update>

    <select id="list" resultMap="commonMap">
        SELECT
            <include refid="columnsWithId"/>
        FROM
            <include refid="tableName"/>
    </select>

    <select id="listByPidAndType" resultMap="commonMap">
        SELECT
            <include refid="columnsWithId"/>
        FROM
            <include refid="tableName"/>
        <where>
            pid = #{pid}
            <if test="type != null and type > 0">
                AND
                type = #{type}
            </if>
            AND
                status = 1
        </where>
    </select>

    <select id="getById" resultMap="commonMap">
        SELECT
        <include refid="columnsWithId"/>
        FROM
        <include refid="tableName"/>
        WHERE
        id = #{id}
    </select>

    <select id="isExistByPid" resultType="java.lang.Boolean">
        SELECT ISNULL(
        (
        SELECT TOP(1) 1 from
        <include refid="tableName"/>
        WHERE
        pid = #{pid}
        ),0)
    </select>

    <select id="isExistByPidAndStatus" resultType="java.lang.Boolean">
        SELECT ISNULL(
        (
        SELECT TOP(1) 1 FROM
        <include refid="tableName"/>
        WHERE
        pid = #{pid}
        AND
        status = #{status}
        ),0)
    </select>

    <select id="listPermissionByUserId" resultType="java.lang.String">
        SELECT
            DISTINCT sys_resource.permission
        FROM
            sys_resource
        LEFT JOIN
            sys_role_resource_mid
        ON
            sys_resource.id = sys_role_resource_mid.resource_id
        LEFT JOIN
            sys_user_role_mid
        ON
            sys_user_role_mid.role_id = sys_role_resource_mid.role_id
        WHERE
            sys_user_role_mid.user_id = #{userId}
    </select>

    <select id="isExistById" resultType="java.lang.Boolean">
        SELECT ISNULL(
        (
        SELECT TOP(1) 1 FROM
        <include refid="tableName"/>
        WHERE
        id = #{id}
        ),0)
    </select>

    <select id="isExistByUserIdAndResourceId" resultType="java.lang.Boolean">
        SELECT ISNULL(
        (
        SELECT TOP(1) 1 FROM
            sys_user_role_mid
                LEFT JOIN
            sys_role_resource_mid
            ON
                sys_user_role_mid.role_id = sys_role_resource_mid.role_id
        WHERE
            sys_user_role_mid.user_id = #{userId}
          AND
            sys_role_resource_mid.resource_id = #{id}
        ),0)
    </select>
</mapper>
